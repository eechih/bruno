{
  "name": "bruno",
  "version": "0.1.0",
  "bin": {
    "bruno": "bin/bruno.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "prettier:fix": "prettier --config .prettierrc --write '**/*.{js,ts}'",
    "lint": "eslint '**/*.{js,ts}'",
    "lint:fix": "npm lint --fix",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/eechih/bruno"
  },
  "author": "<eechih@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@aws-sdk/client-appsync": "^3.332.0",
    "@types/jest": "^29.5.1",
    "@types/node": "20.1.3",
    "@typescript-eslint/eslint-plugin": "^5.59.5",
    "@typescript-eslint/parser": "^5.59.5",
    "aws-cdk": "2.79.1",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "~5.0.4"
  },
  "dependencies": {
    "@aws-cdk/aws-apigatewayv2-alpha": "^2.79.1-alpha.0",
    "@aws-cdk/aws-apigatewayv2-integrations-alpha": "^2.79.1-alpha.0",
    "aws-cdk-lib": "2.79.1",
    "constructs": "^10.2.20",
    "source-map-support": "^0.5.21"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "npm lint:fix",
      "npm prettier:fix"
    ],
    "*.{md,json,yml}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
